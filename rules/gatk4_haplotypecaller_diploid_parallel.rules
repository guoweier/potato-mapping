rule gatk4_haplotypecaller_diploid_parallel:
    input: 
        bam="data/dedup/2x_{sample}-{unit}-dedup-sorted.aln.bam",
        ref=config["genome"],
        dict=re.sub("(\.fasta$|\.fa$)", ".dict", config["genome"]),
        fai=config["genome"]+".fai",
        fofn="fofn/2x_{sample}-{unit}.fofn",
        intervals="data/intervals/gatk-haplocaller.intervals"
    output: "data/calls/gatk/2x_{sample}-{unit}.done"
    threads: config["params"]["gatk_haplotypecaller_diploid"]["threads"]
    params:
        config["params"]["gatk_haplotypecaller_diploid"]["opt"]
    shell:
        "parallel --link -j {threads} gatk-launch HaplotypeCaller {params} "
        "-R {input.ref} -I {input.bam} -O {{1}} -L {{2}} :::: {input.fofn} "
        ":::: {input.intervals} ; touch {output}"